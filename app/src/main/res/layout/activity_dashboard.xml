<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Dashboard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoLy"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:background="#3B83BD"
        app:layout_constraintEnd_toEndOf="@id/infoLy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/infoLy"
        app:layout_constraintTop_toTopOf="@id/infoLy">

        <TextView
            android:id="@+id/userinfotV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/Inventariobtn"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="40dp"
        android:onClick="onClickShop"
        android:src="@drawable/inventario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/CreatorsBtn"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:onClick="onClickCreators"
        app:layout_constraintEnd_toStartOf="@+id/Inventariobtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configuracionbtn"
        app:srcCompat="@drawable/creadores" />

    <ImageButton
        android:id="@+id/configuracionbtn"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="128dp"
        android:onClick="onClickProfile"
        app:layout_constraintEnd_toStartOf="@+id/Inventariobtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageButton
        android:id="@+id/ExitBtn"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="200dp"
        android:onClick="onClickExit"
        app:layout_constraintEnd_toStartOf="@+id/Inventariobtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configuracionbtn"
        app:srcCompat="@drawable/exit" />

    <ImageButton
        android:id="@+id/Juegobtn"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="40dp"
        android:onClick="onClickShop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Inventariobtn"
        app:srcCompat="@drawable/mando" />
</androidx.constraintlayout.widget.ConstraintLayout>